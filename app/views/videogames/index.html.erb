<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h1 class="text-center">Videogames</h1>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Platform ID</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @videogames.each do |videogame| %>
            <tr>
              <td><%= videogame.title %></td>
              <td><%= videogame.platform_id %></td>
              <td><%= link_to 'Show', videogame %></td>
              <td><%= link_to 'Edit', edit_videogame_path(videogame) %></td>
              <td><%= link_to 'Destroy', videogame, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      
      <%= link_to 'New Videogame', new_videogame_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

